<Page x:ConnectionId='1'
    x:Class="App_NavigationPane_CodeBehind.Views.ShareTargetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:templateSelectors="using:App_NavigationPane_CodeBehind.TemplateSelectors"
    xmlns:models="using:App_NavigationPane_CodeBehind.Models"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2'
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">

        <Grid.RowDefinitions>
            <RowDefinition x:ConnectionId='3' x:Name="TitleRow" Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='4'
            x:Name="TitlePage"
                                                             
            Style="{StaticResource PageTitleStyle}" />

        <ContentControl x:ConnectionId='5' Grid.Row="1"                                           >
            <ContentControl.ContentTemplateSelector>
                <templateSelectors:SharedContentTemplateSelector>
                    <templateSelectors:SharedContentTemplateSelector.WebLinkTemplate>
                        <DataTemplate                                           >
                            <HyperlinkButton x:ConnectionId='7'
                                                        
                                                           />                           
                        </DataTemplate>
                    </templateSelectors:SharedContentTemplateSelector.WebLinkTemplate>
                    <templateSelectors:SharedContentTemplateSelector.StorageItemsTemplate>
                        <DataTemplate                                                >
                            <FlipView x:ConnectionId='8'                              >
                                <FlipView.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding}"/>
                                    </DataTemplate>
                                </FlipView.ItemTemplate>
                            </FlipView>
                        </DataTemplate>
                    </templateSelectors:SharedContentTemplateSelector.StorageItemsTemplate>
                </templateSelectors:SharedContentTemplateSelector>
            </ContentControl.ContentTemplateSelector>
        </ContentControl>
        <Button x:ConnectionId='6'
            Grid.Row="2"
            x:Uid="ShareTarget_CompleteButton"
            HorizontalAlignment="Right"
            Margin="{StaticResource MediumTopBottomMargin}"
                                         />
    </Grid>
</Page>

