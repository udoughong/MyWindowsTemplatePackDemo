<Page
    x:Class="App_NavigationPane_CaliburnMicro.Views.CameraPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:cm="using:Caliburn.Micro"
    xmlns:controls="using:App_NavigationPane_CaliburnMicro.Controls"
    xmlns:behaviors="using:App_NavigationPane_CaliburnMicro.Behaviors"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Minimal"
    mc:Ignorable="d">    
    <Grid x:Name="ContentArea">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <controls:CameraControl
                x:Name="cameraControl"
                x:Uid="CameraPage_CameraControl"
                cm:Message.Attach="[Event PhotoTaken] = [OnPhotoTaken($eventArgs)]" />
            <Image
                Height="70"
                Width="70"
                Margin="{StaticResource MediumLeftTopRightBottomMargin}"
                Stretch="UniformToFill"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Source="{x:Bind ViewModel.Photo, Mode=OneWay}"/>
        </Grid>        
    </Grid>
</Page>
