<Page x:ConnectionId='1'
    x:Class="App_Blank_CaliburnMicro.Views.ImageGalleryDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:App_Blank_CaliburnMicro.Core.Models"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:cm="using:Caliburn.Micro"
    cm:Message.Attach="[Event KeyDown] = [OnPageKeyDown($eventArgs)]"
    mc:Ignorable="d">

    <Grid>
        <FlipView x:ConnectionId='2'
                                                   
                                                                        
            animations:Connected.Key="galleryAnimationKey"
            animations:Connected.AnchorElement="{Binding ElementName=detailImage}">
            <FlipView.ItemTemplate>
                <DataTemplate                                >
                    <Viewbox x:ConnectionId='4' StretchDirection="DownOnly">
                        <Image x:ConnectionId='5'
                            x:Name="detailImage"
                            Stretch="None"
                                                     />
                    </Viewbox>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <Button x:ConnectionId='3'
            x:Name="closeButton"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
            cm:Message.Attach="GoBack">
            <SymbolIcon Symbol="Back" />
        </Button>
    </Grid>
</Page>

