<Page
    x:Class="App_HorizontalNavigationPane_CodeBehind.Views.CameraPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:controls="using:App_HorizontalNavigationPane_CodeBehind.Controls"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
          <controls:CameraControl x:ConnectionId='3'
            x:Name="cameraControl"
            x:Uid="CameraPage_CameraControl"
                                                  />
          <Image x:ConnectionId='4'
            x:Name="Photo"
            Height="70"
            Width="70"
            Margin="{StaticResource MediumLeftTopRightBottomMargin}"
            Stretch="UniformToFill"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" />
        </Grid>
    </Grid>
</Page>

